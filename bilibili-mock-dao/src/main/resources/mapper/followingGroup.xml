<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dao.FollowingGroupDao">
    <!--==============================-->
    <!--GET BY FOLLOWING GROUP BY TYPE-->
    <!--==============================-->
    <select id="getByType" parameterType="java.lang.Long" resultType="org.example.domain.FollowingGroup">
        select *
        from t_following_group
        where `type` = #{integer}
    </select>


    <!--============================-->
    <!--GET BY FOLLOWING GROUP BY ID-->
    <!--============================-->
    <select id="getById" parameterType="java.lang.Long" resultType="org.example.domain.FollowingGroup">
        select *
        from t_following_group
        where id = #{id}
    </select>

</mapper>