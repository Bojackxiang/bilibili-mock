<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD MAPPER 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.dao.UserDao">
    <update id="updateUserById"
            parameterType="org.example.domain.User"
    >
        update t_user
        set
        <if test=" phone != null and phone != ''">
            phone = #{phone},
        </if>
        <if test=" email != null and email != ''">
            email = #{email},
        </if>
        <if test=" salt != null and salt != ''">
            salt = #{salt},
        </if>
        <if test=" password != null and password != ''">
            password = #{password},
        </if>
        updateTime = #{updateTime}
        where id = #{id}

    </update>
    <!---->
    <!--SELECT USER BY PHONE-->
    <!---->
    <select id="getUserByPhone"
            parameterType="java.lang.String"
            resultType="org.example.domain.User">
        select *
        from t_user
        where phone = #{phone}
    </select>


    <!---->
    <!--ADDING USER-->
    <!---->
    <insert id="addUser"
            parameterType="org.example.domain.User"
            useGeneratedKeys="true"
            keyProperty="id">
        insert into t_user(phone,
                           email,
                           salt,
                           password,
                           createTime)
        values (#{phone},
                #{email},
                #{salt},
                #{password},
                #{createTime})
    </insert>


    <!---->
    <!--ADDING USER INFO-->
    <!---->
    <insert id="addUserInfo"
            parameterType="org.example.domain.UserInfo">
        insert into t_user_info(userId,
                                nick,
                                gender,
                                birth,
                                createTime)
        values (#{userId},
                #{nick},
                #{gender},
                #{birth},
                #{createTime})
    </insert>


    <!---->
    <!--SELECT USERINFO BY USER ID-->
    <!---->
    <select id="getUserInfoByUserId"
            parameterType="java.lang.Long"
            resultType="org.example.domain.UserInfo">
        select *
        from t_user_info
        where userId = #{userId}
    </select>

    <!---->
    <!--SELECT USER BY USER ID-->
    <!---->
    <select id="getUserById"
            parameterType="java.lang.Long"
            resultType="org.example.domain.User">
        select *
        from t_user
        where id = #{id}
    </select>
</mapper>